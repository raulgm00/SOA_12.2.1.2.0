Insert into FENIX.TCO_DOCUMENTO_TAREA
(ID,
ID_TCA_DOCUMENTO,
ID_TAREA_BPM,
PUEDE_CREAR, PUEDE_MODIFICAR,
PUEDE_BORRAR, PUEDE_CONSULTAR, BAN_ESTATUS, ES_MANDATORIO, ID_TCA_ACCION,
MOSTRAR_ULTIMO)
SELECT
(SELECT MAX(ID) FROM FENIX.TCO_DOCUMENTO_TAREA) + ROWNUM ID,
ID_TCA_DOCUMENTO,
237 ID_TAREA_BPM,  -- id de la nueva tarea
0 PUEDE_CREAR, 0 PUEDE_MODIFICAR, 0 PUEDE_BORRAR,
PUEDE_CONSULTAR, BAN_ESTATUS, NULL ES_MANDATORIO,
NULL ID_TCA_ACCION, NULL MOSTRAR_ULTIMO
FROM FENIX.TCO_DOCUMENTO_TAREA A
WHERE BAN_ESTATUS = 1
AND ID_TAREA_BPM = 9; --Indicar la tarea de la cual desean clonar

commit;