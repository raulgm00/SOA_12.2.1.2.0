      <tarjeta>
        <xsl:value-of select="/ns0:CardCrTrnInqRq/ns0:Trn/eoTrn:CardKey/ns4:CardNum"/>
      </tarjeta>
      <xsl:variable name="v1" select="xp20:format-dateTime (xp20:current-date ( ), '[YYYY][M01][D01]')"/>
      <xsl:variable name="diaactual" select="substring($v1,7,2)"/>
      <xsl:variable name="fechacorte"
                    select="DVMFunctions:lookupValue ('Commons/dvm/EvertecMapping', 'T24', substring(/ns0:CardCrTrnInqRq/ns0:Trn/eoTrn:CardKey/ns4:CardNum,1,8), 'DIA.CORTE', '' )"/>
      <xsl:choose>
        <xsl:when test="$fechacorte > $diaactual">
          <xsl:choose>
            <xsl:when test="substring($v1,5,2) != '01' and substring($v1,5,2) != '10' ">
              <fechaDesde>
                <xsl:value-of select="concat(substring ($v1,1,4), substring($v1,5,1), substring($v1,6,1)-1, substring($v1,7,2))"/>
              </fechaDesde>
            </xsl:when>
            <xsl:when test="substring($v1,5,2) = '10'">
              <fechaDesde>
                <xsl:value-of select="concat(substring ($v1,1,4), '09', substring($v1,7,2))"/>
              </fechaDesde>
            </xsl:when>
            <xsl:otherwise>
              <fechaDesde>
                <xsl:value-of select="concat (substring ($v1,1,4)-1, '12', substring($v1,7,2))"/>
              </fechaDesde>
            </xsl:otherwise>
          </xsl:choose>
        </xsl:when>
        <xsl:otherwise>
          <fechaDesde>
            <xsl:value-of select="concat (substring ($v1,1,4), substring($v1,5,2), $fechacorte)"/>
          </fechaDesde>
        </xsl:otherwise>
      </xsl:choose>
      <fechaHasta>
        <xsl:value-of select="xp20:format-dateTime (/ns0:CardCrTrnInqRq/ns0:TimeFrame/eoCom:StartDt, '[YYYY][M01][D01]')"/>
      </fechaHasta>
    </web:consultaMovimientos>
